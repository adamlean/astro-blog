---
import { getCollection } from "astro:content";

let posts = await getCollection("blog");

posts = posts
  .sort((a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime())
  .slice(0, 6);
---

<section class="latest-posts">
  <div class="container">
    <h2 class="section-title">Latest Posts</h2>
    <div class="posts-grid">
      {
        posts.map((post) => (
          <article class="post-card">
            <a href={`/blog/${post.slug}`} class="post-link">
              <img
                src={post.data.image}
                alt={post.data.title}
                class="post-image"
              />

              <div class="post-content">
                <span class="post-category">{post.data.category}</span>
                <h3 class="post-title">{post.data.title}</h3>
                <p class="post-description">{post.data.description}</p>
                <div class="post-meta">
                  <span class="post-date">
                    {post.data.pubDate.toLocaleDateString("en-US", {
                      year: "numeric",
                      month: "long",
                      day: "numeric",
                    })}
                  </span>
                </div>
              </div>
            </a>
          </article>
        ))
      }
    </div>
  </div>
</section>

<style>
  .latest-posts {
    padding: 40px 0;
  }

  .container {
    max-width: 1100px;
    margin: auto;
    padding: 0 20px;
  }

  .section-title {
    font-size: 20px;
    font-weight: bold;
    margin-bottom: 20px;
  }

  .posts-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
  }

  .post-card {
    border: 1px solid #eee;
    border-radius: 10px;
    overflow: hidden;
    background: white;
    transition: box-shadow 0.2s ease;
  }

  .post-card:hover {
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
  }

  .post-image {
    width: 100%;
    height: 180px;
    object-fit: cover;
  }

  .post-content {
    padding: 15px;
  }

  .post-tag {
    display: inline-block;
    background: #2563eb;
    color: white;
    font-size: 12px;
    padding: 4px 8px;
    border-radius: 5px;
    margin-bottom: 8px;
  }

  .post-title {
    font-size: 16px;
    font-weight: bold;
    margin-bottom: 12px;
  }

  .post-meta {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 14px;
    color: #777;
  }

  .post-avatar {
    width: 20px;
    height: 20px;
    border-radius: 50%;
  }

  /* Адаптив */
  @media (max-width: 900px) {
    .posts-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 600px) {
    .posts-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
